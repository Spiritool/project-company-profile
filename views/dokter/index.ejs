<%- include('../partials/__head.ejs') %>
<body>
<div class="container-scroller">
    <!-- partial:partials/_navbar.html -->
    <%- include('../partials/__nav.ejs') %>
    <!-- partial -->
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="container mt-5">
                <div class="row">
                    <div class="col-lg-12 grid-margin stretch-card">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">Data Dokter</h4>
                                <a href="/dokter/create" class="btn btn-sm btn-success mb-3">Tambah</a>
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>No</th>
                                                <th>Gambar</th>
                                                <th>Nama</th>
                                                <th>Alamat</th>
                                                <th>No. Telp</th>
                                                <th>Spesialisasi</th>
                                                <th colspan="2">Aksi</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% for(var i=0; i < data.length; i++){ %>
                                            <tr>
                                                <th scope="row"><%= (i+1) %></th>
                                                <td class="py-1">
                                                    <img src="/images/dokter/<%= data[i].gambar_dokter %>" height="100" width="150" alt="Gambar Dokter"/>
                                                </td>
                                                <td><%= data[i].nama_dokter %></td>
                                                <td><%= data[i].alamat_dokter %></td>
                                                <td><%= data[i].no_hp %></td>
                                                <td><%= data[i].keahlian %></td>
                                                <td>
                                                    <a href="/dokter/edit/<%= data[i].id_dokter %>" class="btn btn-sm btn-warning">Edit</a>
                                                    <a href="/dokter/delete/<%= data[i].id_dokter %>" class="btn btn-sm btn-danger">Delete</a>
                                                </td>
                                            </tr>
                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- content-wrapper ends -->
</div>
<!-- container-scroller ends -->
<%- include('../partials/__foot.ejs') %>
</body>
