<%- include('../partials/__head.ejs') %>
<body>
    <div class="container-scroller d-flex align-items-center justify-content-center" style="min-height: 100vh;">
    <!-- partial:partials/_navbar.html -->
    <!-- partial -->
    <div class="main-panel">
        <div class="content-wrapper d-flex align-items-center justify-content-center">
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Input Data layanan</h4>
                        <p class="card-description">
                            Basic form layout
                        </p>
                        <form action="/layanan/store" method="POST" enctype="multipart/form-data" class="forms-sample">
                            <div class="form-group">
                                <label for="gambar_layanan">Foto Menu</label>
                                <input type="file" class="form-control" id="gambar_layanan" name="gambar_layanan" required>
                            </div>
                            <div class="form-group">
                                <label for="nama_layanan">Nama Layanan</label>
                                <input type="text" class="form-control" id="nama_layanan" name="nama_layanan" placeholder="Nama" required>
                            </div>
                            <div class="form-group">
                                <label for="nama_layanan">Sub Nama Layanan</label>
                                <input type="text" class="form-control" id="nama_layanan" name="subnama_layanan" placeholder="subNama" required>
                            </div>
                            <div class="form-group">
                                <label for="deskripsi_layanan">Deskripsi Layanan</label>
                                <textarea type="text" class="form-control" id="deskripsi_layanan" name="deskripsi_layanan" placeholder="Deskripsi" required></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary mr-2">Submit</button>
                            <button type="button" class="btn btn-light" onclick="history.back()" >Cancel</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- content-wrapper ends -->
</div>
<!-- container-scroller ends -->
<%- include('../partials/__foot.ejs') %>
</body>
