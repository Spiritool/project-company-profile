<%- include('../partials/__head.ejs') %>
<body>
    <div class="container-scroller d-flex align-items-center justify-content-center" style="min-height: 100vh;">
        <!-- partial:partials/_navbar.html -->
        <!-- partial -->
        <div class="main-panel w-100">
            <div class="content-wrapper d-flex align-items-center justify-content-center">
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Edit Data layanan</h4>
                        <p class="card-description">
                            Basic form layout
                        </p>
                        <form action="/layanan/update/<%= id %>" method="POST" enctype="multipart/form-data" class="forms-sample">
                            <div class="form-group">
                                <label for="gambar_layanan">Foto Menu</label>
                                <input type="file" class="form-control" id="gambar_layanan" name="gambar_layanan">
                            </div>
                            <div class="form-group">
                                <label for="nama_layanan">Nama</label>
                                <input type="text" class="form-control" id="nama_layanan" name="nama_layanan" value="<%= data.nama_layanan %>" required>
                            </div>
                            <div class="form-group">
                                <label for="nama_layanan">Sub Nama</label>
                                <input type="text" class="form-control" id="nama_layanan" name="subnama_layanan" value="<%= data.subnama_layanan %>" required>
                            </div>
                            <div class="form-group">
                                <label for="deskripsi_layanan">Deskripsi</label>
                                <textarea type="text-area" class="form-control" id="deskripsi_layanan" name="deskripsi_layanan" value="<%= data.deskripsi_layanan %>" required></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary mr-2">Simpan</button>
                            <button type="button" class="btn btn-light" onclick="history.back()">Cancel</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- content-wrapper ends -->
</div>
<!-- container-scroller ends -->
<%- include('../partials/__foot.ejs') %>
</body>
</html>
