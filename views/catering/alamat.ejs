                    <script>
                        // Ambil semua elemen dengan class "aksi-container"
                        document.querySelectorAll('.aksi-container').forEach(container => {
                            const toggle = container.querySelector('.aksi-toggle'); // Tombol Titik Tiga
                            const menu = container.querySelector('.aksi-menu');    // Menu Edit dan Hapus

                            // Tambahkan event click pada tombol titik tiga
                            toggle.addEventListener('click', () => {
                                // Tampilkan atau sembunyikan menu
                                const isVisible = menu.style.display === 'block';
                                menu.style.display = isVisible ? 'none' : 'block';
                            });

                            // Sembunyikan menu saat klik di luar
                            document.addEventListener('click', (e) => {
                                if (!container.contains(e.target)) {
                                    menu.style.display = 'none';
                                }
                            });
                        });
                    </script>
