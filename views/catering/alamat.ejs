            <script>
                document.addEventListener('DOMContentLoaded', () => {
                    // Cari semua tombol edit
                    const editButtons = document.querySelectorAll('[data-bs-target="#editModal"]');

                    // Tambahkan event listener ke setiap tombol edit
                    editButtons.forEach(button => {
                        button.addEventListener('click', () => {
                            // Ambil data dari atribut data-*
                            const nama = button.getAttribute('data-nama');
                            const alamat = button.getAttribute('data-alamat');
                            const telepon = button.getAttribute('data-telepon');
                            const id = button.getAttribute('data-id');  // Ambil ID alamat

                            // Isi modal dengan data yang sesuai
                            document.getElementById('nama_penerima').value = nama;
                            document.getElementById('nama_alamat').value = alamat;
                            document.getElementById('teleponEdit').value = telepon;
                            document.getElementById('alamatId').value = id;  // Set ID ke dalam input hidden
                        });
                    });
                });

            </script>

