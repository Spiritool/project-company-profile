                        </div>
                    </div>

                    <!-- Right column -->
                    <div class="col-md-6 text-end">
                        <p>Subtotal <span id="subtotal" class="float-end">Rp. 0</span></p>
                        <p class="promo-discount">Promo Jum'at Berkah <span class="float-end">-0%</span></p>
                        <hr>
                        <p class="promo-total">Total <span id="total" class="float-end">Rp. 0</span></p>
                        <a class="btn btn-custom mt-3 checkout-button" href="#">Checkout</a>
                    </div>
                </div>
            </div>

        </div>

        <script>
            // Menangani perubahan nilai input jumlah secara langsung
            document.querySelectorAll('.quantity-input').forEach(input => {
                input.addEventListener('change', function () {
                    const id = this.closest('.input-group').querySelector('.id').textContent.trim();
                    const jumlah = parseInt(this.value, 10) || 0; // Mengambil nilai terbaru

                    // Kirim data ke server
                    fetch('/catering/update-quantity', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify({
                                id,
                                jumlah
                            })
                        })
                        .then(response => response.json())
                        .then(data => {
                            if (data.success) {
                                console.log('Quantity updated successfully');
                            } else {
                                console.error('Failed to update quantity');
                            }
                        })
                        .catch(err => console.error('Error:', err));
                });
            });
        </script>


        <script>
            document.querySelector('.checkout-button').addEventListener('click', async function (e) {
                e.preventDefault();

                // Ambil semua checkbox yang dicentang
                const checkedItems = Array.from(document.querySelectorAll('.item-checkbox:checked')).map(
                    checkbox => {
                        console.log('Checkbox yang tercentang:',
                        checkbox); // Debugging: periksa checkbox yang tercentang
                        console.log('Value Checkbox:', checkbox
                        .value); // Debugging: periksa value dari checkbox

                        // Parsing nilai JSON dari checkbox
                        let itemData = JSON.parse(checkbox.value);
                        console.log('Item yang diambil:',
                        itemData); // Debugging: tampilkan data item yang diambil

                        // Mengambil ID pembayaran dari elemen <small class="id text-danger">
                        const itemElement = checkbox.closest('.item');
                        if (itemElement) {
                            const idElement = itemElement.querySelector('.id');
                            if (idElement) {
                                itemData.id_pembayaran = idElement
                                .textContent; // Menambahkan id_pembayaran ke data item
                                console.log('ID Pembayaran yang diambil:', itemData
                                .id_pembayaran); // Debugging: periksa ID
                            } else {
                                console.warn('ID pembayaran tidak ditemukan untuk item', itemData);
                            }
                        }

                        return itemData.id_pembayaran; // Kirim ID pembayaran (id_pembayaran) saja
                    });

                console.log('Item yang akan dikirim ke server:',
                checkedItems); // Debugging: tampilkan array item yang akan dikirim

                // Periksa apakah ada item yang dicentang
                if (checkedItems.length === 0) {
                    alert('Pilih setidaknya satu item untuk melanjutkan checkout.');
                    return;
                }

                // Kirim data ke server menggunakan fetch
                const response = await fetch('/catering/checkout', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        itemIds: checkedItems // Hanya kirim ID pembayaran
                    }),
                });

                if (response.ok) {
                    const data = await response.text();
                    document.body.innerHTML = data; // Menyisipkan HTML respons ke dalam body
                } else {
                    const errorText = await response.text();
                    alert(`Terjadi kesalahan: ${errorText}`);
                }
            });
        </script>

        <script>
            document.querySelectorAll('.item-quantity').forEach(input => {
                input.addEventListener('change', function () {
                    const itemId = this.dataset.itemId; // Ambil ID item dari atribut data
                    const checkbox = document.querySelector(`.item-checkbox[data-item-id="${itemId}"]`);

                    if (checkbox) {
                        // Ambil data lama dari checkbox
                        let itemData = JSON.parse(checkbox.value);

                        // Perbarui jumlah dalam data
                        itemData.quantity = parseInt(this.value, 10) || 0;

                        // Simpan kembali data yang diperbarui ke checkbox
                        checkbox.value = JSON.stringify(itemData);
                    }
                });
            });
        </script>

        <script>
            const checkboxes = document.querySelectorAll('.item-checkbox');
            const subtotalElement = document.getElementById('subtotal');
            const totalElement = document.getElementById('total');
            const discountRate = 0;

            function updateTotal() {
                let subtotal = 0;

                checkboxes.forEach(checkbox => {
                    if (checkbox.checked) {
                        const priceElement = checkbox.closest('tr').querySelector('.total-harga');
                        const price = parseFloat(priceElement.textContent.replace('Rp.', '').replace(/\./g, '')
                            .trim());
                        subtotal += price;
                    }
                });

                const discount = subtotal * discountRate;
                const total = subtotal - discount;

                subtotalElement.textContent = `Rp. ${subtotal.toLocaleString('id-ID')}`;
                totalElement.textContent = `Rp. ${total.toLocaleString('id-ID')}`;
            }

            checkboxes.forEach(checkbox => {
                checkbox.addEventListener('change', updateTotal);
            });
        </script>

        <script>
            // Fungsi untuk memperbarui total harga per item
            function updateTotalPrice() {
                const cartItems = document.querySelectorAll('.total-harga');

                cartItems.forEach((item, index) => {
                    const priceElement = document.querySelectorAll('.harga')[index];
                    const quantityElement = document.querySelectorAll('.quantity-input')[index];

                    const price = parseInt(priceElement.textContent.replace('Rp.', '').replace(/\./g, '')
                        .trim());
                    const quantity = parseInt(quantityElement.value);

                    if (!isNaN(price) && !isNaN(quantity)) {
                        const totalPrice = price * quantity;
                        item.textContent = `Rp. ${totalPrice.toLocaleString('id-ID')}`;
                    }
                });

                updateTotal(); // Memperbarui subtotal atau total keseluruhan jika diperlukan
            }

            // Menambah event listener ke tombol plus dan minus
            document.querySelectorAll('.btn-plus, .btn-minus').forEach(button => {
                button.addEventListener('click', function () {
                    const input = this.parentElement.querySelector('.quantity-input');
                    const isPlus = this.classList.contains('btn-plus');
                    let currentQuantity = parseInt(input.value);

                    if (isPlus) {
                        input.value = currentQuantity + 1;
                    } else if (currentQuantity > 1) {
                        input.value = currentQuantity - 1;
                    }

                    input.dispatchEvent(new Event(
                        'change')); // Memicu event 'change' agar updateTotalPrice terpanggil
                });
            });

            // Menambah event listener untuk input jumlah secara manual
            document.querySelectorAll('.quantity-input').forEach(input => {
                input.addEventListener('input', updateTotalPrice);
                input.addEventListener('change',
                    updateTotalPrice); // Untuk memastikan harga diperbarui saat tombol +/- ditekan
            });

            // Memperbarui total harga saat halaman dimuat
            window.onload = function () {
                updateTotalPrice();
            };
        </script>




