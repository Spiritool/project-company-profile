        <div class="container mt-5 position-relative">
            <h2 class="berita">Daftar Berita</h2>
            <div class="garis-horizontal"></div>
            <div class="container position-relative mt-5">
                <div id="carouselExample" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <% let chunkedData = []; 
                          for (let i = 0; i < data.length; i += 4) {
                              chunkedData.push(data.slice(i, i + 4)); 
                          } %>
        
                        <% chunkedData.forEach((chunk, chunkIndex) => { %>
                        <div class="carousel-item <%= chunkIndex === 0 ? 'active' : '' %>">
                            <div class="row">
                                <% chunk.forEach((item, index) => { %>
                                <div class="col-lg-3 col-md-4 col-sm-6 mb-3">
                                    <div class="card-berita" style="width: 95%;">
                                        <img src="/images/berita/<%= item.gambar_berita %>" class="card-img-top"
                                            alt="gambar berita">
                                        <div class="card-body">
                                            <small class="fw-light">Upload by: Admin, <%= item.tanggal_upload %></small>
                                            <h5 class="card-title"><b><%= item.nama_berita %></b></h5>
                                            <p class="card-text fs-7"><small><%= item.deskripsi_berita.substring(0, 80) %>...</small>
                                            </p>
                                            <!-- Button to trigger modal -->
                                            <button class="btn btn-primary" 
                                                    data-bs-toggle="modal" 
                                                    data-bs-target="#modalBerita" 
                                                    data-judul="<%= item.nama_berita %>" 
                                                    data-gambar="/images/berita/<%= item.gambar_berita %>" 
                                                    data-deskripsi="<%= item.deskripsi_berita %>">
                                                Read More
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                <% }) %>
                            </div>
                        </div>
                        <% }) %>
                    </div>
        
                    <!-- Carousel Controls -->
