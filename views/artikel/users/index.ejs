        <script>
            // Event listener for the modal
            const modalBerita = document.getElementById('modalBerita');
            modalBerita.addEventListener('show.bs.modal', function (event) {
                const button = event.relatedTarget; // Button that triggered the modal
                const judul = button.getAttribute('data-judul');
                const gambar = button.getAttribute('data-gambar');
                const deskripsi = button.getAttribute('data-deskripsi');
        
                // Update modal content
                const modalTitle = modalBerita.querySelector('#modalJudul');
                const modalImage = modalBerita.querySelector('#modalImage');
                const modalDescription = modalBerita.querySelector('#modalDeskripsi');
        
                modalTitle.textContent = judul;
                modalImage.src = gambar;
                modalDescription.textContent = deskripsi;
            });
        </script>
        

