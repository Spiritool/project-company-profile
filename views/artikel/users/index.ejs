                    var filterValue = $(this).attr('data-filter');
                    if (filterValue == "*") {
                        $('.photo').show();
                    } else {
                        $('.photo').not(filterValue).hide();
                        $(filterValue).show();
                    }
                    $('.nav-link-album').removeClass('active');
                    $(this).addClass('active');
                    return false;
                });

